{% block body %}
    <h1>Vente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ vente.prix }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
